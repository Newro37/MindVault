<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Default Theme (System Default) -->
    <style name="Base.Theme.MyNote" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.MyNote.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.MyNote.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@android:color/black</item>
    </style>

    <!-- Application Theme (Inherits from System Default) -->
    <style name="Theme.MyNote" parent="Base.Theme.MyNote" />

</resources>
